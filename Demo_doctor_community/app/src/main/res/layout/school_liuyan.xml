<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center"
        android:background="#23b1a5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_marginLeft="@dimen/x24"
            android:layout_centerVertical="true"
            android:background="@drawable/yy_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="给学校留言"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/iv_home_genghuan"
            android:background="@drawable/yuan_white_b"
            android:text="提交"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y42"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/y23" />
    </RelativeLayout>

        <EditText
            android:background="@drawable/yuan_white"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:layout_marginTop="@dimen/y27"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y346" />

</LinearLayout>